<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#2183b0" />
            <stroke
                android:width="2dp"
                android:color="#adc6e8" />
            <padding
                android:left="5dp"
                android:top="15dp"
                android:right="5dp"
                android:bottom="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#2183b0"
                android:endColor="#7cbfde"
                android:angle="270" 
                android:type="linear"
                />
            <stroke
                android:width="2dp"
                android:color="#2183b0" />
            <padding
                android:left="0dp"
                android:top="15dp"
                android:right="0dp"
                android:bottom="15dp" />
        </shape>
    </item>
</selector>